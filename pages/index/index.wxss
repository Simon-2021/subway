}
.line-picker{
  width: 550rpx;
  height: 50rpx;
  margin-top: 25rpx;
  margin-left: 30rpx;
  font-size: 36rpx;    
  text-align: center;
  line-height: 50rpx;
  border: 1rpx solid #efefef;
}
.line-button{
  margin-top: 20rpx;
